<config>
	<parent-provides>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="ROM"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
		<service name="Timer"/>
		<service name="Uplink"/>
	</parent-provides>

	<default caps="100"/>

	<start name="platform_drv" caps="150">
		<binary name="platform_drv"/>
		<resource name="RAM" quantum="1M"/>
		<provides> <service name="Platform"/> </provides>
		<config>
			<device name="smmu">
				<io_mem  address="0x51400000" size="0x40000"/>
				<irq     number="64"/> <!-- 0x20 + 32 -->
			</device>

			<device name="fec" type="fsl,imx6sx-fec">
				<io_mem   address="0x5b040000" size="0x10000"/>
				<irq      number="290"/> <!-- 0x102 + 32 -->
				<irq      number="288"/> <!-- 0x100 + 32 -->
				<irq      number="289"/> <!-- 0x101 + 32 -->
				<irq      number="291"/> <!-- 0x103 + 32 -->
				<property name="mii"        value="rgmii-id"/>
			</device>
			<policy label="nic_drv -> " info="yes"> <device name="fec"/> </policy>
		</config>
		<route> <any-service> <parent/> </any-service> </route>
	</start>

	<start name="nic_drv" caps="140">
		<binary name="fec_nic_drv"/>
		<resource name="RAM" quantum="20M"/>
		<route>
			<service name="ROM">      <parent/> </service>
			<service name="PD">       <parent/> </service>
			<service name="RM">       <parent/> </service>
			<service name="CPU">      <parent/> </service>
			<service name="LOG">      <parent/> </service>
			<service name="Timer">    <parent/> </service>
			<service name="Uplink">   <parent/> </service>
			<service name="Platform"> <child name="platform_drv"/> </service>
		</route>
	</start>
</config>
