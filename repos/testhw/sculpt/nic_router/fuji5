<config verbose_domain_state="yes">
	<report interval_sec="5" bytes="yes" config="yes" config_triggers="yes" links="yes" stats="yes"/>

	<default-policy domain="default"/>

	<policy label_prefix="nic_drv -> " domain="uplink"/>
	<policy label_prefix="usb_net -> " domain="uplink_usb"/>

<!--
	<policy label_prefix="vbox6_ubuntu -> " domain="vm"/>
-->

	<domain name="uplink">
		<nat domain="default" tcp-ports="1000" udp-ports="1000" icmp-ids="1000"/>
<!--
		<tcp-forward port="2222" domain="default" to="10.0.1.2" to_port="22"/>
-->
	</domain>

	<domain name="uplink_usb">
		<nat domain="vm" tcp-ports="1000" udp-ports="1000" icmp-ids="1000"/>
	</domain>

	<domain name="default" interface="10.0.1.1/24">
		<dhcp-server ip_first="10.0.1.2" ip_last="10.0.1.200" dns_config_from="uplink"/>
		<tcp dst="0.0.0.0/0">
			<permit-any domain="uplink"/>
		</tcp>
		<udp dst="0.0.0.0/0">
			<permit-any domain="uplink"/>
		</udp>
		<icmp dst="0.0.0.0/0" domain="uplink"/>
	</domain>

	<domain name="vm" interface="10.0.5.1/24">
		<dhcp-server ip_first="10.0.5.2" ip_last="10.0.5.200" dns_config_from="uplink_usb"/>
		<tcp dst="0.0.0.0/0">
			<permit-any domain="uplink_usb"/>
		</tcp>
		<udp dst="0.0.0.0/0">
			<permit-any domain="uplink_usb"/>
		</udp>
		<icmp dst="0.0.0.0/0" domain="uplink_usb"/>
	</domain>

</config>
